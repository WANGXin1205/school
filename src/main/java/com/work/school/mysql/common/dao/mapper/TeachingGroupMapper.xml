<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.work.school.mysql.common.dao.mapper.TeachingGroupMapper">
  <resultMap id="BaseResultMap" type="com.work.school.mysql.common.dao.domain.TeachingGroupDO">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="group_id" jdbcType="INTEGER" property="groupId" />
    <result column="class_id" jdbcType="INTEGER" property="classNum" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="create_by" jdbcType="VARCHAR" property="createBy" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_by" jdbcType="VARCHAR" property="updateBy" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, group_id, class_id, status, create_by, create_time, update_by, update_time
  </sql>

    <select id="listAllTeachingGroup" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from teaching_group where status = 1
    </select>

    <select id="listTeachingGroupByGroupIdList" parameterType="java.util.List" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from teaching_group where status = 1 and group_id in
        <foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>


</mapper>